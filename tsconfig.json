{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./source",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "include": [
      "src/**/*",
      "declare/**/*"
    ]
  }
}
